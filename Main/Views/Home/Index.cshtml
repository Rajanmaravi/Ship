                { "data": "capacity", "autoWidth": true },
                { "data": "etd", "autoWidth": true },
                { "data": "eta", "autoWidth": true },
                {
                    "data": "id", "autoWidth": true, "render": function (data) {
                        return '<span onclick="DeleteRecord(' + data + ');" class="w3-tag w3-round w3-blue"' + data + '"><b>Edit</b></span> |' +
                        '<span onclick="DeleteRecord(' + data + ');" class="w3-tag w3-round w3-red"' + data + '"><b>Delete</b></span>';
                    }
                }
            ]
